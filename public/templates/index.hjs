<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>AkitaBox RPi Camera</title>
        <meta name="description" content="AkitaBox RPi Camera">
        <meta name="author" content="resteinbock">
        <meta http-equiv="Cache-control" content="no-cache">
        <link rel="shortcut icon" href="/img/favicon.png">
        <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>

        <div>
            <h1>Rpi Camera</h1>
        </div>
        <div>

            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                {{#grouped_docs}}
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="heading-{{ safe_name }}">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse-{{ safe_name }}" aria-expanded="true" aria-controls="collapse-{{ safe_name }}">
                                    <strong>{{ name }}</strong> &mdash; {{ count }} pics
                                </a>
                            </h4>
                        </div>
                        <div id="collapse-{{ safe_name }}" class="panel-collapse collapse {{#first}}in{{/first}}" role="tabpanel" aria-labelledby="heading-{{ safe_name }}">
                            <div class="panel-body">
                                <div id="carousel-{{ safe_name }}" class="carousel slide" data-ride="carousel">
                                    <!-- Indicators -->
                                    <ol class="carousel-indicators">
                                        {{#documents}}
                                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                        {{/documents}}
                                    </ol>

                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner" role="listbox">
                                        {{#documents}}
                                            <div class="item active">
                                                <img src="..." alt="...">
                                                <div class="carousel-caption">
                                                    ...
                                                </div>
                                            </div>
                                        {{/documents}}
                                    </div>

                                    <!-- Controls -->
                                    <a class="left carousel-control" href="#carousel-{{ safe_name }}" role="button" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#carousel-{{ safe_name }}" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/grouped_docs}}
            </div>

        </div>


    </body>
</html>